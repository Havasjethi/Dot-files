set surround
set multiple-cursors
set commentary
set NERDTree

set number
set relativenumber
set smartindent
" set cursorline
" set linebreak

set ignorecase " Ignore case when searching
set smartcase  " When searching try to be smart about cases

set scrolloff=8

set clipboard+=unnamedplus

let mapleader = " "

set incsearch


" nmap <C-a> ggVGy<C-O><C-O>
